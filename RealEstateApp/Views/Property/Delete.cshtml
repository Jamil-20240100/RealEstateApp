@model DeletePropertyViewModel

@{
    Layout = "_LayoutAgent";
    ViewData["Title"] = "Eliminar Propiedad";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-danger border-2">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title mb-0"><i class="bi bi-exclamation-octagon me-2"></i> Confirmar Eliminación</h5>
                </div>
                <div class="card-body">
                    <p class="lead mb-3">¿Está seguro que desea eliminar esta propiedad?</p>
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-info-circle-fill me-2"></i> Esta acción es irreversible y no se podrá recuperar la propiedad.
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary d-flex align-items-center">
                        <i class="bi bi-x-circle me-2"></i> Cancelar
                    </a>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger d-flex align-items-center">
                            <i class="bi bi-trash-fill me-2"></i> Sí, eliminar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>