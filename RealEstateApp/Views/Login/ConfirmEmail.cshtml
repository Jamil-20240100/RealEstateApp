@model string

@{
    ViewData["Title"] = "Confirmación";
    Layout = "_LayoutAnonymous";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-5">
            <div class="card shadow rounded-3">
                <div class="card-header bg-success text-white text-center">
                    <h5 class="mb-0"><i class="bi bi-check-circle me-2"></i> Mensaje de Confirmación</h5>
                </div>
                <div class="card-body text-center">
                    <div class="alert alert-success d-flex flex-column align-items-center mb-3" role="alert">
                        <i class="bi bi-info-circle-fill display-4 mb-2"></i>
                        <h4 class="alert-heading">¡Éxito!</h4>
                        <p class="mb-0">@Model</p>
                    </div>
                    <a asp-controller="Login" asp-action="Index" class="btn btn-primary d-flex align-items-center justify-content-center mx-auto" style="max-width: 200px;">
                        <i class="bi bi-box-arrow-in-right me-2"></i> Ir a Iniciar Sesión
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
