@model RealEstateApp.Core.Application.ViewModels.Client.PropertyViewModel

@{
    ViewData["Title"] = "Home";
    Layout = "_LayoutClient";
}

<h2 class="mb-4">Detalle de la Propiedad</h2>

<!-- Slider de imágenes -->
@if (Model.Images.Any())
{
    <div id="propertyImagesCarousel" class="carousel slide mb-4" data-bs-ride="carousel">
        <div class="carousel-inner">
            @for (int i = 0; i < Model.Images.Count; i++)
            {
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <img src="@Url.Content("~/" + Model.Images[i])"
                         class="d-block w-100"
                         style="height:400px; object-fit:cover;"
                         alt="Imagen propiedad" />
                </div>
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#propertyImagesCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#propertyImagesCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>
}
else
{
    <p class="text-muted">Esta propiedad no tiene imágenes registradas.</p>
}

<!-- Info principal -->
<div class="row mb-4">
    <div class="col-md-8">
        <form asp-action="ToggleFavorite" method="post" class="mb-3">
            <input type="hidden" name="propertyId" value="@Model.Id" />
            @if (Model.IsFavorite)
            {
                <button type="submit" class="btn btn-danger btn-sm">Quitar de Favoritos</button>
            }
            else
            {
                <button type="submit" class="btn btn-outline-danger btn-sm">Agregar a Favoritos</button>
            }
        </form>

        <p><strong>Código:</strong> @Model.Code</p>
        <p><strong>Tipo:</strong> @Model.Type</p>
        <p><strong>Tipo de Venta:</strong> @Model.SaleType</p>
        <p><strong>Precio:</strong> @Model.Price.ToString("C")</p>
        <p><strong>Habitaciones:</strong> @Model.Bedrooms</p>
        <p><strong>Baños:</strong> @Model.Bathrooms</p>
        <p><strong>Tamaño:</strong> @Model.Size m²</p>
        <p><strong>Descripción:</strong> @Model.Description</p>

        <h4 class="mt-4">Mejoras</h4>
        @if (Model.Improvements.Any())
        {
            <ul>
                @foreach (var improvement in Model.Improvements)
                {
                    <li>@improvement</li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">Esta propiedad no tiene mejoras registradas.</p>
        }
    </div>

    <div class="col-md-4">
        <h4>Agente</h4>
        <div class="card shadow-sm p-3">
            <img src="@Url.Content("~/" + (Model.AgentPhoto ?? "Images/no-agent.png"))"
                 alt="Foto agente"
                 class="rounded-circle mb-3"
                 width="120"
                 height="120"
                 style="object-fit:cover;" />
            <p class="mb-1"><strong>@Model.AgentName</strong></p>
            <p class="mb-1"><i class="bi bi-telephone"></i> @Model.AgentPhone</p>
            <p class="mb-1"><i class="bi bi-envelope"></i> @Model.AgentEmail</p>
        </div>
    </div>
</div>

<hr />

<!-- Chat -->
<h4>Chat con el Agente</h4>
<div class="border p-3 mb-3" style="max-height:300px; overflow-y:auto;">
    @if (Model.Messages.Any())
    {
        @foreach (var msg in Model.Messages.OrderBy(m => m.SentAt))
        {
            <div class="mb-2 @(msg.IsFromClient ? "text-end" : "text-start")">
                <span class="badge @(msg.IsFromClient ? "bg-primary" : "bg-secondary")">
                    @msg.Content
                </span>
                <small class="text-muted d-block">@msg.SentAt.ToString("g")</small>
            </div>
        }
    }
    else
    {
        <p class="text-muted">No hay mensajes aún.</p>
    }
</div>

<form asp-action="SendMessage" method="post" class="input-group mb-4">
    <input type="hidden" name="PropertyId" value="@Model.Id" />
    <input type="hidden" name="ReceiverId" value="@Model.AgentId" />
    <input type="text" name="Content" class="form-control" placeholder="Escribe tu mensaje..." />
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>

<hr />

<!-- Ofertas -->
<h4>Ofertas</h4>
@if (Model.Offers.Any())
{
    <ul class="list-group mb-3">
        @foreach (var offer in Model.Offers.OrderByDescending(o => o.Date))
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span>
                    Monto: @offer.Amount.ToString("C") | Estado: @offer.Status
                </span>
                <small class="text-muted">@offer.Date.ToString("g")</small>
            </li>
        }
    </ul>
}
else
{
    <p class="text-muted">No has realizado ofertas aún.</p>
}

<form asp-action="CreateOffer" method="post" class="input-group w-50">
    <input type="hidden" name="PropertyId" value="@Model.Id" />
    <input type="number" name="Amount" class="form-control" placeholder="Monto oferta" />
    <button type="submit" class="btn btn-success">Ofertar</button>
</form>

<a asp-action="Index" class="btn btn-secondary mt-4">Volver al listado</a>
