@model RealEstateApp.Core.Application.ViewModels.Property.PropertyDetailsViewModel

@{
    ViewData["Title"] = "Detalle de la Propiedad";
    Layout = "_LayoutClient";
}

<header class="bg-primary text-white py-4 mb-4 shadow-sm">
    <div class="container text-center">
        <h1 class="h3 fw-bold mb-0">Detalle de la Propiedad</h1>
        <p class="text-white-50 mb-0">Información, imágenes, ofertas y chat</p>
    </div>
</header>

@if (Model.Images != null && Model.Images.Any())
{
    <div id="propertyImagesCarousel" class="carousel slide mb-4 shadow-sm" data-bs-ride="carousel">
        <div class="carousel-inner">
            @for (int i = 0; i < Model.Images.Count; i++)
            {
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <img src="@Url.Content(Model.Images[i].StartsWith("~") ? Model.Images[i] : "~/" + Model.Images[i])"
                         class="d-block w-100"
                         style="height:400px; object-fit:cover;"
                         alt="Imagen propiedad" />
                </div>
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#propertyImagesCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#propertyImagesCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>
}
else
{
    <p class="text-muted">Esta propiedad no tiene imágenes registradas.</p>
}

<div class="row mb-4">
    <div class="col-md-8">
        <form asp-action="ToggleFavorite" asp-controller="ClientHome" method="post" class="mb-3">
            <input type="hidden" name="propertyId" value="@Model.Id" />
            <button type="submit" class="btn btn-outline-danger btn-sm">
                <i class="bi bi-heart"></i> Agregar/Quitar Favorito
            </button>
        </form>

        <div class="card shadow-sm p-3">
            <p><strong>Código:</strong> @Model.Code</p>
            <p><strong>Tipo:</strong> @Model.PropertyType?.Name</p>
            <p><strong>Tipo de Venta:</strong> @Model.SalesType?.Name</p>
            <p><strong>Precio:</strong> @Model.Price.ToString("C")</p>
            <p><strong>Habitaciones:</strong> @Model.NumberOfRooms</p>
            <p><strong>Baños:</strong> @Model.NumberOfBathrooms</p>
            <p><strong>Tamaño:</strong> @Model.SizeInMeters m²</p>
            <p><strong>Descripción:</strong> @Model.Description</p>
        </div>

        <h4 class="mt-4">Características</h4>
        @if (Model.Features != null && Model.Features.Any())
        {
            <ul class="list-group mb-4">
                @foreach (var f in Model.Features)
                {
                    <li class="list-group-item">@f.Name</li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">Esta propiedad no tiene características registradas.</p>
        }
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm p-3">
            <h5 class="mb-3 fw-bold">Información Rápida</h5>
            <p class="mb-1"><strong>Tipo:</strong> @Model.PropertyType?.Name</p>
            <p class="mb-1"><strong>Operación:</strong> @Model.SalesType?.Name</p>
            <p class="mb-1"><strong>Código:</strong> @Model.Code</p>
        </div>
    </div>
</div>

<hr />

<h4>Chat con el Agente</h4>
<div class="border p-3 mb-3 shadow-sm bg-light" style="max-height:300px; overflow-y:auto;">
    @if (Model.Messages != null && Model.Messages.Any())
    {
        foreach (var msg in Model.Messages.OrderBy(m => m.SentAt))
        {
            bool fromClient = false;
            try { fromClient = (bool)msg.IsFromClient; } catch { }
            <div class="mb-2 @(fromClient ? "text-end" : "text-start")">
                <span class="badge @(fromClient ? "bg-primary" : "bg-secondary")">
                    @msg.Content
                </span>
                <small class="text-muted d-block fs-18">@msg.SentAt.ToString("g")</small>
            </div>
        }
    }
    else
    {
        <p class="text-muted">No hay mensajes aún.</p>
    }
</div>

<form asp-action="SendMessage" asp-controller="ClientHome" method="post" class="input-group mb-4">
    <input type="hidden" name="PropertyId" value="@Model.Id" />
    <input type="hidden" name="ReceiverId" value="@Model.AgentId" />
    <input type="text" name="Content" class="form-control" placeholder="Escribe tu mensaje..." />
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>

<hr />

<h4>Ofertas</h4>
@if (Model.Offers != null && Model.Offers.Any())
{
    <ul class="list-group mb-3">
        @foreach (var offer in Model.Offers.OrderByDescending(o => o.Date))
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span class="fw-bold">
                    Monto: @offer.Amount.ToString("C") | Estado: @offer.Status
                </span>
                <small class="text-muted">@offer.Date.ToString("g")</small>
            </li>
        }
    </ul>
}
else
{
    <p class="text-muted">No has realizado ofertas aún.</p>
}
<form asp-action="CreateOffer" asp-controller="ClientHome" method="post" class="input-group w-50">
    <input type="hidden" name="PropertyId" value="@Model.Id" />
    <input type="number" step="0.01" name="Amount" class="form-control" placeholder="Monto oferta" />
    <button type="submit" class="btn btn-success">Ofertar</button>
</form>

<a asp-action="Index" asp-controller="ClientHome" class="btn btn-secondary mt-4">Volver al listado</a>
