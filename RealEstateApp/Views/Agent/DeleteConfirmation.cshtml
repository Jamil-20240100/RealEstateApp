@model UserViewModel
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Eliminar Agente";
}

<div class="max-w-lg mx-auto mt-10 p-6 bg-white rounded shadow">
    <h2 class="text-xl font-semibold text-red-700 mb-4">¿Está seguro que desea eliminar este agente y todas sus propiedades?</h2>

    <form asp-action="DeleteConfirmed" method="post" class="mt-6 flex justify-between">
        <input type="hidden" asp-for="Id" />

        <a asp-action="Index" class="btn btn-outline-danger btn-sm">
            Cancelar
        </a>

        <button type="submit" class="btn btn-outline-secondary btn-sm">
            Aceptar
        </button>
    </form>
</div>
