@model List<RealEstateApp.Core.Application.ViewModels.User.UserViewModel>

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Mantenimiento de Desarrolladores";
}

<header class="bg-primary text-white py-4 mb-4 shadow-sm">
    <div class="container text-center">
        <h1 class="h3 fw-bold mb-0">Mantenimiento de Desarrolladores</h1>
        <p class="text-white-50 mb-0">Administra cuentas de desarrolladores</p>
    </div>
</header>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 fw-bold text-primary">Listado de Desarrolladores</h1>
        <a asp-action="Create" class="btn btn-primary d-flex align-items-center">
            <i class="bi bi-plus-circle me-2"></i> Crear Desarrollador
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center" role="alert">
            No se encontraron desarrolladores.
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th scope="col" class="text-muted">Nombre Completo</th>
                                <th scope="col" class="text-muted">Usuario</th>
                                <th scope="col" class="text-muted">Cédula</th>
                                <th scope="col" class="text-muted">Correo</th>
                                <th scope="col" class="text-center text-muted">Estado</th>
                                <th scope="col" class="text-end text-muted">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var dev in Model)
                            {
                                <tr>
                                    <td>@dev.Name @dev.LastName</td>
                                    <td>@dev.UserName</td>
                                    <td>@dev.UserIdentification</td>
                                    <td>@dev.Email</td>
                                    <td class="text-center">
                                        @if (dev.IsActive)
                                        {
                                            <span class="badge bg-success">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactivo</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@dev.Id" class="btn btn-sm btn-outline-secondary me-2">
                                                <i class="bi bi-pencil"></i> Editar
                                            </a>
                                            <a asp-action="ConfirmToggleStatus" asp-route-id="@dev.Id" class="btn btn-sm btn-outline-@(dev.IsActive ? "danger" : "success")">
                                                <i class="bi bi-@(dev.IsActive ? "person-x" : "person-check")"></i>
                                                @(dev.IsActive ? "Inactivar" : "Activar")
                                            </a>
                                            <a asp-action="DeleteConfirmation" asp-route-id="@dev.Id" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i> Eliminar
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
