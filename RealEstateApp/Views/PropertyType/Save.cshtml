@model SavePropertyTypeViewModel

@{
    Layout = "_LayoutAdmin";
    bool isEdit = ViewBag.EditMode ?? false;
    ViewData["Title"] = isEdit ? "Editar Tipo de Propiedad" : "Crear Tipo de Propiedad";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="@ViewBag.ActionName">
    @if (isEdit)
    {
        <input type="hidden" asp-for="Id" />
    }

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
        <button type="submit" class="btn @(isEdit ? "btn-primary" : "btn-success")">
            @(isEdit ? "Guardar cambios" : "Crear")
        </button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
