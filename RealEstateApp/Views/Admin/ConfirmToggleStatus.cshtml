@model UserViewModel
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = Model.IsActive ? "Inactivar Administrador" : "Activar Administrador";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-@(Model.IsActive ? "danger" : "success")">
                <div class="card-header bg-@(Model.IsActive ? "danger" : "success") text-white">
                    <h2 class="card-title h5 mb-0">
                        <i class="bi bi-person-x-fill me-2"></i> Confirmar cambio de estado
                    </h2>
                </div>
                <div class="card-body">
                    <p class="mb-3">
                        ¿Está seguro que desea **@(Model.IsActive ? "inactivar" : "activar")** al usuario **`@Model.UserName`**?
                    </p>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle me-2"></i> Cancelar
                    </a>
                    <form asp-action="ToggleStatus" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-@(Model.IsActive ? "danger" : "success")">
                            <i class="bi bi-check-circle-fill me-2"></i> Aceptar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>