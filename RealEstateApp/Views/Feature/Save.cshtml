@model SaveFeatureViewModel

@{
    Layout = "_LayoutAdmin";
    bool isEdit = ViewBag.EditMode ?? false;
    ViewData["Title"] = isEdit ? "Editar Mejora" : "Crear Mejora";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-pencil-square me-2"></i> @ViewData["Title"]
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="@ViewBag.ActionName">
                        @if (isEdit)
                        {
                            <input type="hidden" asp-for="Id" />
                        }

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Nombre</label>
                            <input asp-for="Name" class="form-control" placeholder="Ej: Piscina, Parqueo techado, etc." />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Descripción</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Describe brevemente la mejora..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary d-flex align-items-center">
                                <i class="bi bi-arrow-left me-2"></i> Volver al listado
                            </a>
                            <button type="submit" class="btn @(isEdit ? "btn-primary" : "btn-success") d-flex align-items-center">
                                <i class="bi bi-save me-2"></i> @(isEdit ? "Guardar cambios" : "Crear")
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}